<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AFC794"
        android:contentDescription="display content"
        android:focusable="false"
        android:gravity="end"
        android:inputType="none"
        android:maxWidth="488dp"
        android:padding="16dp"
        android:textColor="@color/black"
        android:textSize="32sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alignmentMode="alignMargins"
        android:columnCount="4"
        android:columnOrderPreserved="false"
        android:rowCount="6">

        <!-- Number buttons -->
        <Button
            android:id="@+id/button7"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_7" />

        <Button
            android:id="@+id/button8"
            android:layout_row="0"
            android:layout_column="1"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_8" />

        <Button
            android:id="@+id/button9"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_9" />

        <Button
            android:id="@+id/buttonDivide"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_divide" />

        <Button
            android:id="@+id/button4"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_4" />

        <Button
            android:id="@+id/button5"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_5" />

        <Button
            android:id="@+id/button6"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_6" />

        <Button
            android:id="@+id/buttonMultiply"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_multiply" />

        <Button
            android:id="@+id/button1"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_1" />

        <Button
            android:id="@+id/button2"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_2" />

        <Button
            android:id="@+id/button3"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_3" />

        <Button
            android:id="@+id/buttonSubtract"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_subtract" />

        <Button
            android:id="@+id/button0"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_0" />

        <Button
            android:id="@+id/buttonDot"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_dot" />

        <Button
            android:id="@+id/buttonEquals"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_equals" />

        <Button
            android:id="@+id/buttonAdd"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_add" />

        <!-- Trigonometric buttons -->
        <Button
            android:id="@+id/buttonSin"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_sin" />

        <Button
            android:id="@+id/buttonCos"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_cos" />

        <Button
            android:id="@+id/buttonTan"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_tan" />

        <Button
            android:id="@+id/buttonClear"
            android:backgroundTint="#8BC34A"
            android:text="@string/button_clear" />

    </GridLayout>

</LinearLayout>